{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "destination": {
            "additionalProperties": false,
            "properties": {
                "address": {
                    "type": "string"
                },
                "recipient": {
                    "type": "string"
                }
            },
            "required": [
                "recipient",
                "address"
            ],
            "type": "object"
        },
        "items": {
            "items": {
                "additionalProperties": false,
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "code",
                    "description"
                ],
                "type": "object"
            },
            "minItems": 1,
            "type": "array"
        },
        "source": {
            "additionalProperties": false,
            "properties": {
                "location": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "location"
            ],
            "type": "object"
        },
        "transport": {
            "additionalProperties": false,
            "properties": {
                "company": {
                    "type": "string"
                }
            },
            "required": [
                "company"
            ],
            "type": "object"
        }
    },
    "required": [
        "source",
        "destination",
        "transport",
        "items"
    ],
    "type": "object"
}